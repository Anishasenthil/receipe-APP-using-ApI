        <!-- Add more Chinese dishes -->
    </div>

    <script>
        function fillInput(dish) {
            document.getElementById('foodinput').value = dish;
        }
    </script>

    <div class = "form">
        <form action="/" method="post">
            <h1><span>  The DiSh is </span></h1>
             <input id="foodinput" type="text" name="foodname">
             <br><br>
             <button type="submit" ><span>See receipe</span></button>
        </form>
    </div>
    
    <%  if(locals.data){ %>
    <div class="main">
        <div class="left">

            <h1 class="food-name">"<span>"   <%= data.strMeal %>   "</span>"</h1>
            <img src= <%= data.strMealThumb %>  alt="Food Image" class="food-image">
            <h2><span>Directions 🏷️</span></h2>
            <br><br>
            <div class="cooking-instructions-container">
                <ul class="cooking-instructions-list">
                   
                    <% if (data.strInstructions) { %>
                        <% const instructionsArray = data.strInstructions.split('. '); %>
            
                       
                       <% instructionsArray.forEach((sentence) => { %>
                        <%    if (sentence.trim() !== '') {           %>
                    
                                <li><%= sentence %></li>
                    
                                <%    }   %>
                    <%    });  %>
                    <% } %>
                </ul>
            </div>
        </div>

        
        <div class="right">
           <h1><span1>💗  C🍩🍩king  is  like <span>Love</span>   💗.</span1> </h1>
           <br>
           <br>
           <br>
            <div class ="category">
                <h1><span1> Receipe Category :  " <span><%= data.strCategory%></span>   " </span1></h1>
                 <br>
                <h1><span1> Origin : "  <span><%= data.strArea%></span> " </span1></h1>
            </div>
            <br><br><br>
            <h1><span>Ingredients Required..</span></h1>
            <br>
            <div class="ingredients-grid">
                
                <% for (let i = 1; i <= 14; i++) { %>
                    <% if (data['strIngredient' + i]) { %>
                    <div class="ingredient-item">
                        
                        <img src="https://www.themealdb.com/images/ingredients/<%= data['strIngredient' + i] %>.png" alt="Ingredient" class="ingredient-image">
                        <h3><span><%= data['strMeasure' + i] %></span></h3>
                    </div>
                    <%} %>
                <% } %>
            </div>
            
            
            
            <% if (data.strYoutube) { %>
          <%  const videoId = data.strYoutube.split('v=')[1]; %>
          <%  const embedUrl = `https://www.youtube.com/embed/${videoId}`;   %>
       
        <br><br><br><br><br><br>

        <h1><span>Cook along with our <span1>Cook</span1> ..👩🏻‍🍳</span></h1>
        <iframe width="620" height="415" src="<%= embedUrl %>" frameborder="0" allowfullscreen autoplay></iframe>

       <% } %>
        </div>
        
    </div>
    <h2><span1>Rate Our Receipe </span1></h2>
    <div class="star-rating">
        <input type="radio" name="rating" class="star star-1" id="star1" />
        <label for="star1" class="star">&#9733;</label>
        <input type="radio" name="rating" class="star star-2" id="star2" />
        <label for="star2" class="star">&#9733;</label>
        <input type="radio" name="rating" class="star star-3" id="star3" />
        <label for="star3" class="star">&#9733;</label>
        <input type="radio" name="rating" class="star star-4" id="star4" />
        <label for="star4" class="star">&#9733;</label>
        <input type="radio" name="rating" class="star star-5" id="star5" />
        <label for="star5" class="star">&#9733;</label>
    </div>   
        <br><br>
        <div class ="foot"> <span>Made With 💝  by @Ask</span></div>
       
            

    <% } else {%>
        <%=error.msg%>
  
         <%   }   %>


</body>
</html>






